  <!-- ============================= Mammoth ================================= -->
  
  <ThingDef ParentName="BaseMechanoid">
    <defName>Mech_Mammoth</defName>
    <label>mammoth</label>
    <description>Mammoths are heavily armored, heavily armed combat mechanoids. These will be a challenge to take down. They are protected with a heavy duty EMP shield. Mammoths will sometimes try to break through your walls.</description>
    <statBases>
      <MoveSpeed>3</MoveSpeed>
	  <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <PsychicSensitivity>0.25</PsychicSensitivity>
    </statBases>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Ram</li>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>4.2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>25</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>tusk</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>40</power>
        <cooldownTime>5.2</cooldownTime>
        <linkedBodyPartsGroup>Tusk</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>7.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLegs</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>MechanicalMammoth</body>
      <baseBodySize>3.0</baseBodySize>
      <baseHealthScale>8</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
          <soundCall>Pawn_Mech_Centipede_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <Steel>80</Steel>
      <Plasteel>20</Plasteel>
    </butcherProducts>
    <comps>
      <li Class="MoreMechanoids.CompProperties_ShieldGenerator">
		<shieldDef>Gear_MechanoidShieldEMP</shieldDef>
	  </li>
    </comps>
  </ThingDef>
 

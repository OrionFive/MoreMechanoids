<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <defName>Paralyze</defName>
    <label>paralysis</label>
    <description>A temporary loss or impairment of voluntary movement, caused by electric damage done to the nerves.</description>
    <initialSeverity>0.3</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <compClass>HediffComp_Disappears</compClass>
        <disappearsAfterTicks>15000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <compClass>HediffComp_SeverityPerDay</compClass>
        <severityPerDay>-2</severityPerDay>
      </li>
    </comps>
    <stages>
        <li>
          <minSeverity>0.1</minSeverity>
          <label>dizzy</label>
          <painFactor>0.8</painFactor>
            <capMods>
               <li>
                <capacity>Manipulation</capacity>
                <offset>-0.25</offset>
              </li>
             <li>
                <capacity>Consciousness</capacity>
                <offset>-0.25</offset>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.4</minSeverity>
          <label>partial</label>
          <painFactor>0.5</painFactor>
            <capMods>
               <li>
                <capacity>Manipulation</capacity>
                <offset>-0.6</offset>
              </li>
             <li>
                <capacity>Consciousness</capacity>
                <offset>-0.6</offset>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.6</minSeverity>
          <label>severe</label>
          <painFactor>0.3</painFactor>
            <capMods>
               <li>
                <capacity>Manipulation</capacity>
                <setMax>0.2</setMax>
              </li>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0.25</setMax>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.7</minSeverity>
          <label>blackout</label>
          <painFactor>0.1</painFactor>
          <tale>Paralyzed</tale>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0.1</setMax>
              </li>
            </capMods>
        </li>
    </stages>
  </HediffDef>


</Defs>